@model TimeKeeper.Models.ToDoNote
@{
	ViewData["Title"] = "Edit";
}

<div div class="flex-lg-column" style="padding: 1rem">
    <div class="d-flex justify-content-between" style="max-width: 50rem; margin-bottom:10px;">
    <div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
    <div>
        <form asp-action="Destroy" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-light btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                </svg>
            </button>
        </form>
    </div>
</div>
<div class="card border-secondary mb-3" style="max-width: 50rem;">
    <form asp-action="UpdateToDoNote">
        <div class="card-header">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input type="text" asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
        </div>
        <div class="card-body text-secondary">
            <p class="card-text">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea cols="75" rows="4" style="width: 100%; height: auto; max-width: none" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:20px; margin-bottom:20px">
                    <label asp-for="IsCompleted" class="control-label">Complete</label>
                    <input asp-for="IsCompleted" type="checkbox" />
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </p>
    </form>
</div>
</div>
